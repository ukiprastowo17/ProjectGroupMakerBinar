<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.team.TeamActivity">

        <TextView
            android:id="@+id/tv_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Our"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_team1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_40sdp"
            android:text="Team"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/poppins_light"/>

        <LinearLayout
            android:id="@+id/ll_img_team"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_team2"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/_40sdp">

            <ImageView
                android:id="@+id/iv_leader"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_about"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/iv_design"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_about"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/iv_scrum"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_about"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/iv_developer1"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_about"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/iv_developer2"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_about"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/iv_developer3"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_team_about"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_team2"
            app:layout_constraintLeft_toRightOf="@id/ll_img_team"
            android:layout_marginLeft="@dimen/_20sdp">

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uki \nLeader"
                android:layout_marginBottom="@dimen/_26sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lukas \nDesign"
                android:layout_marginBottom="@dimen/_26sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adhi \nScrum"
                android:layout_marginBottom="@dimen/_26sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rodan \nDeveloper"
                android:layout_marginBottom="@dimen/_30sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habio \nDeveloper"
                android:layout_marginBottom="@dimen/_28sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eri \nDeveloper"/>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>