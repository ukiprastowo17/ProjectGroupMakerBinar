<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutActivity">

    <LinearLayout
        android:id="@+id/ll_title_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_20sdp">

        <TextView
            android:id="@+id/tv_sub_title1_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_about"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_desc_title1_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_sub_title2_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Maker"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_desc_title2_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simply and Fast"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:id="@+id/tv_desc_title3_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get To Know About Us"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/tv_desc_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_body"
            android:maxLines="15"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_15ssp"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_people_about"/>
</androidx.constraintlayout.widget.ConstraintLayout>